@model Logic.DataTransferObjects.CreateBrandRequest

@{
    ViewData["Title"] = "Create Brand";
}

<!--/ Intro Single star /-->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Tworzenie brandu</h1>
                    <span class="color-text-a">Create brand</span>
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Admin">Admin</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Create Brand
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!--/ Intro Single End /-->
<!--/ Create brand start /-->
<section class="create-brand-form">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 section-tb85">
                <div class="row">
                    <div class="col-md-7">
                        <form class="form-a contactForm" asp-action="CreateBrand" asp-controller="Admin" method="post" role="form" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <input type="text"
                                               asp-for="Name"
                                               class="form-control form-control-lg form-control-a"
                                               placeholder="Nazwa brandu">
                                        <div class="validation">
                                            <span asp-validation-for="Name"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <div class="form-group">
                                        <textarea asp-for="Description"
                                                  class="form-control"
                                                  cols="45" rows="8"
                                                  data-rule="required"
                                                  data-msg="Please write something for us"
                                                  placeholder="Opis"></textarea>
                                        <div class="validation">
                                            <span asp-validation-for="Description"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <div class="form-group">
                                        <input asp-for="Cover"
                                                  class="form-control"
                                                  cols="45" rows="8"
                                                  data-rule="required"
                                                  data-msg="Please write something for us"
                                                  placeholder="Dodaj plik" 
                                               type="file"></input>
                                        <div class="validation">
                                            <span asp-validation-for="Cover"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-a">Zapisz!</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Create brand end /-->