@model Data.Models.ProductDescription

@{
    ViewData["Title"] = "CreateProductDescription";
    Layout = "~/Areas/Identity/Pages/Account/_IdentityLayout.cshtml";
}

<h4>Description</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateProductDescription">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Language" class="control-label">Wybierz język</label>
                <select asp-for="Language"
                        asp-items="Html.GetEnumSelectList<Data.Enums.Language>()"
                        id="language"></select>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text"
                       type="text"
                       placeholder="Dodaj opis"
                       class="form-control"
                       rows="10"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ProductId"
                       type="hidden"
                       value="@ViewBag.ProductGuid"
                       class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj opis" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

