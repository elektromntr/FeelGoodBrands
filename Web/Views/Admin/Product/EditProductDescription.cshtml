@model Data.Models.ProductDescription

@{
    ViewData["Title"] = "EditBrandDescription";
    Layout = "~/Areas/Identity/Pages/Account/_IdentityLayout.cshtml";
}

<h1>EditProductDescription</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditProductDescription">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Language" class="control-label">Wybierz język</label>
                <select asp-for="Language"
                        asp-items="Html.GetEnumSelectList<Data.Enums.Language>()"
                        id="language"></select>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text"
                          type="text"
                          placeholder="Dodaj opis"
                          class="form-control"
                          rows="10"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ProductId" 
                       type="hidden"
                       value="@Model.ProductId"/>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreationDate" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Admin</a>
</div>

