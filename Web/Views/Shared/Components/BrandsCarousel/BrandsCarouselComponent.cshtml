@using Logic.Extensions
@using Microsoft.AspNetCore.Http
@model IEnumerable<Data.Models.Attachment>

@{
    var language = LanguageExtension.GetLanguage(
        Context.Session.GetString(LanguageExtension.SessionLanguageKey())
        );
}

<div class="intro intro-carousel">
    <div id="carousel" class="owl-carousel owl-theme">
        @foreach (var item in Model)
        {
            <div class="carousel-item-a intro-item bg-image" style="background-image: url('data:@item.FileMimeType;base64,@Convert.ToBase64String(item.FileData)');">
                <div class="overlay overlay-a"></div>
                <div class="intro-content display-table">
                    <div class="table-cell">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="intro-body">
                                        @*<p class="intro-title-top">
                                                @if (brand.CreationDate > DateTime.Now.AddDays(-7))
                                                {
                                                    <span>New!</span>
                                                }
                                            </p>*@
                                        @*<h1 class="intro-title mb-4">
                                                @brand.Name
                                            </h1>*@
                                        <p class="intro-subtitle intro-price">
                                            <a asp-controller="Home" asp-action="SeeMore" asp-route-id="@item.ReferenceId"><span class="price-a">@LanguageExtension.GetTranslatedString(language, "Details")</span></a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
