<section class="contact-form">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 section-tb85">
                <div class="row">
                    <div class="col-md-12">
                        <label>Wyślij nam swój kontakt, a wrócimy do Ciebie z ofertą</label>
                        <div class="row" 
                             id="contact-form">
                            <div class="col-md-9 mb-3">
                                <div class="form-group">
                                    <div class="row">
                                        <input type="text"
                                               class="col-md-5 form-control form-control-lg form-control-a"
                                               placeholder="Podaj nr telefonu"
                                               id="contact-phone"
                                               style="height: 59px;">
                                        <input type="text"
                                               class="col-md-6 form-control form-control-lg form-control-a"
                                               placeholder="Podaj email"
                                               id="contact-email"
                                               style="margin-left: 10px; height: 59px;">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="form-group">
                                    <button class="btn btn-a col-md-12"
                                            role="button"
                                            type="button" onclick="contact.contactMe('@Url.Action("ContactMe", "Home")')">
                                        Wyślij
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
